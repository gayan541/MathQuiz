<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/transparent_color"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="355dp"
        android:layout_height="310dp"
        android:background="@drawable/victory_popup"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:id="@+id/ly_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/txtMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Victory !"
                android:textAllCaps="true"
                android:textColor="@color/yellow_color"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_popup_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtMain"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/roboto_bold"
                android:text="YOU WON"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="25sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/ly_one"
            android:layout_above="@id/ly_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/star"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ly_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:weightSum="1">

            <Button
                android:id="@+id/btnExit"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_false_background"
                android:text="@string/btn_exit"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_bold"
                tools:ignore="MissingConstraints" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>