<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".activities.ScoreScreen">

    <RelativeLayout
        android:id="@+id/text_layout_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp">

        <TextView
            android:id="@+id/txt_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="H"
            android:textColor="@color/white"
            android:fontFamily="@font/heading_regular"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/txt_two"
            android:layout_toEndOf="@id/txt_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="i"
            android:textColor="@color/dark_orange_color"
            android:fontFamily="@font/heading_regular"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/txt_three"
            android:layout_toEndOf="@id/txt_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="g"
            android:textColor="@color/orange_color"
            android:fontFamily="@font/heading_regular"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/txt_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/txt_three"
            android:fontFamily="@font/heading_regular"
            android:text="h"
            android:textColor="@color/white"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/txt_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/txt_four"
            android:fontFamily="@font/heading_regular"
            android:layout_marginStart="10dp"
            android:text="S"
            android:textColor="@color/dark_orange_color"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/txt_six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/txt_five"
            android:fontFamily="@font/heading_regular"
            android:text="c"
            android:textColor="@color/orange_color"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/txt_seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/txt_six"
            android:fontFamily="@font/heading_regular"
            android:text="o"
            android:textColor="@color/white"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/txt_eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/txt_seven"
            android:fontFamily="@font/heading_regular"
            android:text="r"
            android:textColor="@color/dark_orange_color"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/txt_nine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/txt_eight"
            android:fontFamily="@font/heading_regular"
            android:text="e"
            android:textColor="@color/orange_color"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/txt_ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/txt_nine"
            android:fontFamily="@font/heading_regular"
            android:text="s"
            android:textColor="@color/white"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/txt_eleven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/txt_ten"
            android:fontFamily="@font/heading_regular"
            android:text=":"
            android:textColor="@color/dark_orange_color"
            android:textSize="50sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/text_layout_one"
        android:id="@+id/layout_two"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:background="@color/orange_color"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/idTextName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/heading_regular"
            android:text="Name"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/idTextScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/idTextName"
            android:fontFamily="@font/heading_regular"
            android:text="Score"
            android:textColor="@color/white"
            android:textSize="24sp" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/layout_two"
        android:layout_marginTop="15dp"
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>